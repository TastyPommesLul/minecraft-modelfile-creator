{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-create",
    "fs:allow-write",
    "fs:allow-read",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "dialog:default",
    "dialog:allow-ask",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-remove",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DOCUMENT"
        },
        {
          "path": "$DOCUMENT/*"
        },
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$DOCUMENT/**/**"
        },
        {
          "path": "$DOCUMENT/**/**/*"
        },
        {
          "path": "$DOCUMENT/**/**/**"
        },
        {
          "path": "$DOCUMENT/**/**/**/*"
        },
        {
          "path": "$DOCUMENT/**/**/**/**"
        }
      ]
    }
  ]
}